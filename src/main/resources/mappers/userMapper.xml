<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.example.sns.user.dao.UserDAO">
 	<select id="selectUserList" resultType="com.example.sns.user.model.User">
 		SELECT
 			*
 		FROM
 			`user`
 	</select>
 	<select id="selectUserById" parameterType="String" resultType="boolean">
 		SELECT
 			COUNT(*)
 		FROM
 			`user`
 		WHERE
 			`loginId`= #{loginId}
 	</select>
 	
 	<insert id="insertUser" parameterType="Map">
 		INSERT INTO `user`
 		(	
 			`loginId`
 			,`password`
 			,`name`
 			,`email`
 			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{loginId}
 			,#{encryptPassword}
 			,#{name}
 			,#{email}
 			,NOW()
 			,NOW()
 		)
 	</insert>
 	
 	<select id="selectUserByIdAndPassword" parameterType="Map"  resultType="com.example.sns.user.model.User">
 		SELECT
 			*
 		FROM
 			`user`
 		WHERE
 			`loginId`=#{loginId} AND `password` = #{encryptPassword}
 	</select>
 </mapper>